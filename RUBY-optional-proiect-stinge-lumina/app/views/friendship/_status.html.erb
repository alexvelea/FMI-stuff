<% friendship_status = Friendship.friendship_status(user_id, friend_id) %>

<% if friendship_status == Friendship::NONE %>
  <form method="put" action="/friendship/create">
    <input type="hidden" name="friend_id" value="<%=friend_id%>" />
    <input type="submit" value="Send friend request"/>
  </form>
<% elsif  friendship_status == Friendship::PENDING %>
  Pending answer :(
<% elsif  friendship_status == Friendship::ACCEPT %>
  <form method="put" action="/friendship/accept">
    <input type="hidden" name="user_id" value="<%=friend_id%>"/>
    <input type="submit" value="Accept friend request"/>
  </form>
<% else %>
  <form method="put" action="/friendship/destroy">
    <input type="hidden" name="friend_id" value="<%=friend_id%>"/>
    <input type="submit" value=" You are friends! Unfriend?"/>
  </form>
<% end %>